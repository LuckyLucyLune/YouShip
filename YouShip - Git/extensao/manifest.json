{
  "manifest_version": 2,
  "name": "YouShip",
  "version": "1.2",
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://stackpath.bootstrapcdn.com; object-src 'self';",
  "web_accessible_resources": [
    "bootstrap.min.css",
    "bootstrap.min.js",
    "jquery.min.js"
  ],
  "background": {
    "scripts": ["background.js", "assets/js/bootstrap.min.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "assets/logo.png",
    "default_popup": "popup.html"
  },
  "permissions": ["tabs", "activeTab", "http://localhost/"]
}
